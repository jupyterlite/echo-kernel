{
  "name": "@jupyterlite/echo-kernel",
  "version": "0.2.0",
  "description": "An echo kernel for JupyterLite",
  "keywords": [
    "jupyter",
    "jupyterlab",
    "jupyterlite",
    "jupyterlite-extension"
  ],
  "homepage": "https://github.com/jupyterlite/echo-kernel",
  "bugs": {
    "url": "https://github.com/jupyterlite/echo-kernel/issues"
  },
  "license": "BSD-3-Clause",
  "author": {
    "name": "JupyterLite Contributors",
    "email": ""
  },
  "files": [
    "lib/**/*.{d.ts,eot,gif,html,jpg,js,js.map,json,png,svg,woff2,ttf}",
    "style/**/*.{css,js,eot,gif,html,jpg,json,png,svg,woff2,ttf}"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "style": "style/index.css",
  "repository": {
    "type": "git",
    "url": "https://github.com/jupyterlite/echo-kernel.git"
  },
  "scripts": {
    "build": "jlpm run build:lib && jlpm run build:labextension:dev",
    "build:prod": "jlpm run clean && jlpm run build:lib && jlpm run build:labextension",
    "build:labextension": "jupyter labextension build .",
    "build:labextension:dev": "jupyter labextension build --development True .",
    "build:lib": "tsc",
    "clean": "jlpm run clean:lib",
    "clean:lib": "rimraf lib tsconfig.tsbuildinfo",
    "clean:labextension": "rimraf jupyterlite_echo_kernel/labextension",
    "clean:all": "jlpm run clean:lib && jlpm run clean:labextension",
    "eslint": "eslint . --ext .ts,.tsx --fix",
    "eslint:check": "eslint . --ext .ts,.tsx",
    "install:extension": "jlpm run build",
    "watch": "run-p watch:src watch:labextension",
    "watch:src": "tsc -w",
    "watch:labextension": "jupyter labextension watch .",
    "setup:py": "python -m pip install -e \".[dev,lint,test,docs]\""
  },
  "dependencies": {
    "@jupyterlab/coreutils": "^6.1.1",
    "@jupyterlite/contents": "^0.5.0",
    "@jupyterlite/kernel": "^0.5.0",
    "@jupyterlite/server": "^0.5.0"
  },
  "devDependencies": {
    "@jupyterlab/builder": "~4.3.3",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "typescript": "~5.2.2"
  },
  "sideEffects": [
    "style/*.css",
    "style/index.js"
  ],
  "styleModule": "style/index.js",
  "publishConfig": {
    "access": "public"
  },
  "jupyterlab": {
    "extension": true,
    "outputDir": "jupyterlite_echo_kernel/labextension",
    "sharedPackages": {
      "@jupyterlite/kernel": {
        "bundled": false,
        "singleton": true
      }
    }
  },
  "jupyterlite": {
    "liteExtension": true
  },
  "jupyter-releaser": {
    "skip": [
      "check-links"
    ],
    "hooks": {
      "before-build-npm": [
        "python -m pip install jupyterlab~=3.1",
        "jlpm"
      ]
    }
  }
}
